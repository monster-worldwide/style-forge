{
  "name": "@monsterww/figma-toolbox",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": {
    "packages": ["packages/**/*"]
  },
  "scripts": {
    "build": "npm-run-all build:bootstrap build:lerna",
    "build:bootstrap": "npx yarn",
    "build:lerna": "npx lerna run build",
    "test": "npx lerna run test:unit",
    "commit": "git-cz",
    "lint": "npx lerna run lint",
    "prepare": "husky install",
    "analyze": "source-map-explorer packages/**/dist/index.modern.js  --no-border-checks"
  },
  "dependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.1",
    "jest-sonar": "^0.2.12",
    "lerna": "^6.0.0",
    "lerna-dependency-graph": "^1.1.0",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.7.2",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "rollup-plugin-brotli": "^3.1.0",
    "source-map-explorer": "^2.5.3"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": ["eslint", "prettier --write"],
    "*.js": ["eslint", "prettier --write"],
    "*.tsx": ["eslint", "prettier --write"],
    "*.jsx": ["eslint", "prettier --write"]
  },
  "ignoreChanges": ["**/*.md"],
  "resolutions": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1"
  }
}
